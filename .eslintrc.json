{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard",
        "plugin:jsdoc/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
           "react/prop-types": "off",
           "jsdoc/require-jsdoc": [
              "error",
              {
                "publicOnly": false,
                "require": {
                  "FunctionExpression": true,
                  "ArrowFunctionExpression": true,
                  "FunctionDeclaration": true,
                  "MethodDefinition": true
                }
              }
            ]
    }
}
